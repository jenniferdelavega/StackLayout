<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayout.Excer2">
    <ContentPage.Content>

        <StackLayout Padding="10" Orientation="Vertical" VerticalOptions="FillAndExpand">

            <StackLayout Orientation="Vertical">
                <Label Text="nyc_photographer"
                       TextColor="#000000"/>
                <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Like"
                       TextColor="#0000ff"/>
                <Label Text="Comment"
                       TextColor="#0000ff"/>
                <Label Text="Share"
                       TextColor="#0000ff"/>
            </StackLayout>

            <StackLayout Orientation="Vertical">
                <BoxView Color="#f0f0f0" HeightRequest="1"/>
                <Label Text="700 likes"
                       TextColor="#000000"
                       FontAttributes="Bold"/>
                <Label Text="This is a shot yesterday in Skanor, Sweden when driving home, from a couple of days of work in Denmark."
                       TextColor="#686868"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>